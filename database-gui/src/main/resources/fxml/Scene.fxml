<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="800.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jean.database.gui.controller.MainController">
    <top>
        <VBox>
            <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
                <Menu fx:id="fileMenu" mnemonicParsing="false" text="文件">
                    <Menu fx:id="newConnectionMenu" mnemonicParsing="false" text="新建连接"/>
                    <MenuItem mnemonicParsing="false" text="打开连接"/>
                    <MenuItem mnemonicParsing="false" text="关闭连接"/>
                    <MenuItem mnemonicParsing="false" text="导出连接..."/>
                    <MenuItem mnemonicParsing="false" text="导入连接..."/>
                    <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="关闭"/>
                    <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" text="退出"/>
                </Menu>
                <Menu mnemonicParsing="false" text="查看">
                    <MenuItem mnemonicParsing="false" text="Delete"/>
                </Menu>
                <Menu mnemonicParsing="false" text="收藏夹">
                    <MenuItem mnemonicParsing="false" text="Collections"/>
                </Menu>
                <Menu mnemonicParsing="false" text="工具">
                    <MenuItem mnemonicParsing="false" text="Tools"/>
                </Menu>
                <Menu mnemonicParsing="false" text="窗口">
                    <MenuItem mnemonicParsing="false" text="View"/>
                </Menu>
                <Menu mnemonicParsing="false" text="帮助">
                    <MenuItem mnemonicParsing="false" text="Help"/>
                </Menu>
            </MenuBar>
            <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <MenuButton fx:id="connectionMenuButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="85.0"
                            style="-fx-background-radius: 10;" text="连接"/>
                <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="85.0"
                              style="-fx-background-radius: 10;"
                              text="用户">
                    <toggleGroup>
                        <ToggleGroup fx:id="topbuttons"/>
                    </toggleGroup>
                </ToggleButton>
                <ToggleButton fx:id="tableToggleButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="85.0"
                              style="-fx-background-radius: 10;" text="表" toggleGroup="$topbuttons"/>
                <ToggleButton fx:id="viewToggleButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="85.0"
                              style="-fx-background-radius: 10;" text="视图" toggleGroup="$topbuttons"/>
                <ToggleButton fx:id="functionToggleButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="85.0"
                              style="-fx-background-radius: 10;" text="函数" toggleGroup="$topbuttons"/>
                <ToggleButton fx:id="eventToggleButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="85.0"
                              style="-fx-background-radius: 10;" text="事件" toggleGroup="$topbuttons"/>
                <ToggleButton fx:id="queryToggleButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="85.0"
                              style="-fx-background-radius: 10;" text="查询" toggleGroup="$topbuttons"/>
                <ToggleButton fx:id="reportToggleButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="85.0"
                              style="-fx-background-radius: 10;" text="报表" toggleGroup="$topbuttons"/>
                <ToggleButton fx:id="backupToggleButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="85.0"
                              style="-fx-background-radius: 10;" text="备份" toggleGroup="$topbuttons"/>
                <ToggleButton fx:id="plainToggleButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="85.0"
                              style="-fx-background-radius: 10;" text="计划" toggleGroup="$topbuttons"/>
                <ToggleButton fx:id="modelToggleButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="85.0"
                              style="-fx-background-radius: 10;" text="模型" toggleGroup="$topbuttons"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.2, 0.75" nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER">
            <TreeView fx:id="databaseTreeView"/>
            <TabPane fx:id="objectTabPan">
                <Tab fx:id="objectTab" closable="false" text="对象">
                    <TableView fx:id="objectTableView">
                        <columns>
                            <TableColumn text="表名"/>
                            <TableColumn text="自动递增值"/>
                            <TableColumn text="修改日期"/>
                            <TableColumn text="数据长度"/>
                            <TableColumn text="表类型"/>
                            <TableColumn text="行数"/>
                            <TableColumn text="注释"/>
                        </columns>
                    </TableView>
                </Tab>
            </TabPane>
            <TabPane fx:id="infoTabPane">
                <Tab fx:id="generalInfoTab" closable="false" text="常规">
                    <TableView fx:id="generalInfoTableView">
                        <columns>
                            <TableColumn text="名"/>
                            <TableColumn text="值"/>
                        </columns>
                    </TableView>
                </Tab>
                <Tab fx:id="ddlInfoTab" closable="false" text="DDL">
                    <TextArea fx:id="ddlInfoTextArea" editable="false" wrapText="true"/>
                </Tab>
            </TabPane>
        </SplitPane>
    </center>
    <bottom>
        <HBox maxHeight="30.0" minHeight="30.0" prefHeight="30.0" BorderPane.alignment="CENTER_LEFT"/>
    </bottom>
</BorderPane>
